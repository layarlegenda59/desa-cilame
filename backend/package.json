{
  "name": "desa-cilame-backend",
  "version": "1.0.0",
  "description": "Backend API untuk Sistem Informasi Desa Cilame",
  "main": "src/server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:main": "node server-main.js",
    "start:umkm": "node server-umkm.js",
    "start:admin": "node server-admin.js",
    "start:location": "node server-location.js",
    "dev:main": "nodemon server-main.js",
    "dev:umkm": "nodemon server-umkm.js",
    "dev:admin": "nodemon server-admin.js",
    "dev:location": "nodemon server-location.js",
    "start:all": "concurrently \"npm run start:main\" \"npm run start:umkm\" \"npm run start:admin\" \"npm run start:location\"",
    "dev:all": "concurrently \"npm run dev:main\" \"npm run dev:umkm\" \"npm run dev:admin\" \"npm run dev:location\"",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "precommit": "npm run lint && npm run test:ci",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf coverage/ .jest-cache/"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "api",
    "desa",
    "cilame"
  ],
  "author": "Desa Cilame Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
