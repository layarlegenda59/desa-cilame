# ================================
# Database Configuration (SQLite)
# ================================
DB_TYPE=sqlite
DB_PATH=/var/www/desa-cilame/database/desa_cilame_prod.sqlite

# ================================
# Server Configuration
# ================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ================================
# API URLs (Frontend -> Backend)
# ================================
NEXT_PUBLIC_API_URL=https://desacilame.com/api
NEXT_PUBLIC_MAIN_API_URL=https://desacilame.com/api/main
NEXT_PUBLIC_UMKM_API_URL=https://desacilame.com/api/umkm
NEXT_PUBLIC_ADMIN_API_URL=https://desacilame.com/api/admin
NEXT_PUBLIC_LOCATION_API_URL=https://desacilame.com/api/location

# ================================
# Security Keys
# ================================
JWT_SECRET=jwt_secret_key_sangat_rahasia
SESSION_SECRET=session_secret_key_sangat_rahasia
ENCRYPTION_KEY=1234567890abcdef1234567890abcdef  # harus 32 karakter

# ================================
# CORS Configuration
# ================================
CORS_ORIGIN=https://desacilame.com
CORS_CREDENTIALS=true

# ================================
# File Uploads
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/var/www/desa-cilame/uploads

# ================================
# Logging
# ================================
LOG_LEVEL=info
LOG_FILE=/var/log/desa-cilame/app.log

# ================================
# Monitoring
# ================================
HEALTH_CHECK_INTERVAL=30000
MONITORING_ENABLED=true
