# Production Environment Configuration for Hostinger Deployment
# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=desa_cilame_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_TYPE=mysql

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# API URLs for Production
NEXT_PUBLIC_API_URL=https://desacilame.com/api
NEXT_PUBLIC_MAIN_API_URL=https://desacilame.com/api/main
NEXT_PUBLIC_UMKM_API_URL=https://desacilame.com/api/umkm
NEXT_PUBLIC_ADMIN_API_URL=https://desacilame.com/api/admin
NEXT_PUBLIC_LOCATION_API_URL=https://desacilame.com/api/location

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
SESSION_SECRET=your_super_secure_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# CORS Configuration
CORS_ORIGIN=https://desacilame.com
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/var/www/html/uploads

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/desa-cilame/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Email Configuration (if needed)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_email_password
SMTP_SECURE=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
MONITORING_ENABLED=true