# Production Environment Configuration for CloudPanel Deployment
NODE_ENV=production

# Frontend Configuration
PORT=3003
NEXT_PUBLIC_BASE_URL=https://desacilame.com

# Backend API URLs - Using your actual domain
NEXT_PUBLIC_MAIN_API_URL=https://desacilame.com:5000/api
NEXT_PUBLIC_UMKM_API_URL=https://desacilame.com:5001/api
NEXT_PUBLIC_ADMIN_API_URL=https://desacilame.com:5002/api
NEXT_PUBLIC_LOCATION_API_URL=https://desacilame.com:5003/api

# Alternative: If backend APIs should go through main domain
# NEXT_PUBLIC_MAIN_API_URL=https://desacilame.com/api/main
# NEXT_PUBLIC_UMKM_API_URL=https://desacilame.com/api/umkm
# NEXT_PUBLIC_ADMIN_API_URL=https://desacilame.com/api/admin
# NEXT_PUBLIC_LOCATION_API_URL=https://desacilame.com/api/location

# CORS Configuration
CORS_ORIGIN=https://desacilame.com,https://desacilame.com:3003,http://localhost:3003
FRONTEND_URL=https://desacilame.com

# Static Assets Configuration
NEXT_PUBLIC_ASSET_PREFIX=
NEXT_PUBLIC_STATIC_URL=https://desacilame.com

# Database Configuration (Update with your production database settings)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=desa_cilame_prod
DB_USER=desa_user
DB_PASSWORD=your_secure_password

# Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# File Upload
UPLOAD_DIR=/home/desa-cilame/uploads
MAX_FILE_SIZE=50MB

# Logging
LOG_LEVEL=info
LOG_DIR=/home/desa-cilame/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_SIZE=10mb